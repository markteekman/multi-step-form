---
import '@astrojs/tailwind/base.css'
import '../assets/scss/globals.scss'
import SiteMeta from '../components/SiteMeta.astro'
import ConsoleFiglet from '../components/ConsoleFiglet.astro'
import ModalDialog from '../components/ModalDialog.astro'

const {
  title = 'Multi Step Form',
  description = 'Frontend Mentor challenge Multi-step form using Astro, Vue 3, Pinia and WCAG best practises such as error handeling and screen reader feedback.',
  url = 'https://markteekman.github.io/multi-step-form/',
  image = 'social-preview-image.png',
  author = 'Mark Teekman',
} = Astro.props
---

<html
  lang="en"
  dir="ltr"
>
  <head>
    <meta charset="utf-8" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <meta
      http-equiv="X-UA-Compatible"
      content="ie=edge"
    />

    <!-- favicon -->
    <link
      rel="icon"
      type="image/svg+xml"
      href="/multi-step-form/favicon.svg"
    />

    <SiteMeta
      title={title}
      description={description.substring(0, 100)}
      url={url}
      image={image}
      author={author}
    />

    <style>
      body {
        display: grid;
        place-items: center;
        min-block-size: 100vh;

        @media (max-width: 61rem) {
          display: block;
        }
      }

      .wrapper {
        width: 100%;
      }
    </style>
  </head>

  <body style="background-color: var(--neutral-magnolia);">
    <div class="wrapper">
      <main
        id="main-content"
        class="relative grid place-items-center"
      >
        <slot />
      </main>
      <footer class="px-8 py-4 text-center text-sm">
        Challenge by <a
          href="https://www.frontendmentor.io/solutions/vue-3-pinia-astro-wcag-22-accessibility-mNmVrT8te7"
          >Frontend Mentor</a
        >. Coded by <a href="https://markteekman.nl">Mark Teekman</a>. <button
          id="modal-trigger"
          class="border-none p-0 underline hover:no-underline"
          >Accessibility notice</button
        >.
      </footer>
    </div>
    <ModalDialog
      triggerId="modal-trigger"
      title="Accessibility notice"
    >
      <p>
        I've done my best to make this form as accessible as possible by using focus management, error handling and
        screen reader feedback. However I'm always learning new things and I'm open to feedback. If you have any
        suggestions or if you find any issues, please let me know by submitting an issue at the <a
          href="https://github.com/markteekman/multi-step-form/issues">GitHub repository</a
        > for this project. Thank you! ðŸš€
      </p>
    </ModalDialog>
    <ConsoleFiglet />
  </body>
</html>
